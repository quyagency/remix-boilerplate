{
  "name": "remix-boilerplate",
  "description": "Fastest FE Site",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "postinstall": "patch-package",
    "tailwind": "tailwindcss -i app/assets/css/style.css -o app/style.css --postcss",
    "dev:tailwind": "yarn run tailwind --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare --watch",
    "dev": "concurrently 'yarn:dev:*'",
    "prebuild": "rimraf .cache dist build public/build",
    "build": "cross-env NODE_ENV=production yarn run tailwind --minify && remix build",
    "deploy": "wrangler publish -e production",
    "deploy:dev": "wrangler publish",
    "svgr": "svgr app/assets/svg/ -d app/icons/ --ext tsx --icon"
  },
  "dependencies": {
    "@mantine/hooks": "^5.7.1",
    "@ngneat/falso": "^6.1.0",
    "@remix-run/cloudflare": "^1.9.0",
    "@remix-run/cloudflare-workers": "^1.9.0",
    "@remix-run/react": "^1.9.0",
    "@tabler/icons": "^1.119.0",
    "@tsndr/cloudflare-worker-jwt": "^2.1.4",
    "axios": "1.1.3",
    "clsx": "^1.2.1",
    "cookie": "0.5.0",
    "currency.js": "^2.0.4",
    "headroom.js": "^0.12.0",
    "js-cookie": "^3.0.1",
    "nprogress": "^0.2.0",
    "patch-package": "^6.4.7",
    "query-string": "^7.1.1",
    "radash": "^7.0.0",
    "ramda": "0.28.0",
    "ramda-adjunct": "^3.2.0",
    "rc-textarea": "^0.3.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.34.2",
    "react-hot-toast": "^2.4.0",
    "remix-utils": "3.3.0",
    "slugify": "^1.6.5",
    "sprintf-js": "^1.1.2",
    "tiny-emitter": "^2.1.0",
    "valtio": "^1.6.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@remix-run/dev": "^1.9.0",
    "@remix-run/eslint-config": "^1.9.0",
    "@svgr/cli": "^6.3.1",
    "@tailwindcss/line-clamp": "0.4.0",
    "@tailwindcss/typography": "^0.5.4",
    "@types/js-cookie": "3.0.2",
    "@types/nprogress": "^0.2.0",
    "@types/ramda": "^0.28.15",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-helmet": "^6.1.5",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-valtio": "^0.6.0",
    "miniflare": "^2.11.0",
    "postcss": "^8.4.16",
    "postcss-import": "14.1.0",
    "postcss-import-ext-glob": "^2.0.1",
    "postcss-inline-svg": "^5.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2",
    "wrangler": "^2.1.15"
  },
  "engines": {
    "node": ">=16.7"
  },
  "sideEffects": false
}
