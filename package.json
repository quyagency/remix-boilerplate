    "@remix-run/eslint-config": "^1.19.1",
    "@svgr/cli": "^8.0.1",
    "@tailwindcss/typography": "^0.5.9",
    "@types/js-cookie": "3.0.3",
    "@types/nprogress": "^0.2.0",
    "@types/ramda": "^0.29.3",
