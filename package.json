    "axios": "^1.4.0",
    "clsx": "^2.0.0",
    "cookie": "0.5.0",
    "headroom.js": "^0.12.0",
    "js-cookie": "^3.0.5",
    "nprogress": "^0.2.0",
    "patch-package": "^8.0.0",
    "query-string": "^8.1.0",
    "radash": "^11.0.0",
    "ramda": "0.29.0",
    "ramda-adjunct": "^4.0.0",
    "rc-textarea": "^1.3.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
