{
  "name": "remix-boilerplate",
  "description": "Fastest FE Site",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "postinstall": "patch-package",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare --watch",
    "dev": "concurrently 'npm:dev:*'",
    "prebuild": "rimraf .cache dist build public/build",
    "build": "cross-env NODE_ENV=production remix build",
    "deploy": "wrangler publish -e production",
    "deploy:dev": "wrangler publish",
    "svgr": "svgr app/assets/svg/ -d app/icons/ --ext tsx --icon"
  },
  "dependencies": {
    "@mantine/hooks": "^6.0.17",
